<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ParallelTestSuite" parallel="methods" thread-count="3">
    <listeners>
        <listener class-name="ui.helpers.AllureScreenshotListener"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    <test name="UITests">
        <groups>
            <run>
                <include name="ui"/>
                <include name="api"/>
                <include name="regression"/>
            </run>
        </groups>
        <packages>
            <package name="ui.tests.*"/>
        </packages>
    </test>
    <test name="APITests">
        <groups>
            <run>
                <include name="api"/>
                <include name="regression"/>
            </run>
        </groups>
        <packages>
            <package name="api.tests.*"/>
        </packages>
    </test>
</suite>